<div class="dropdown d-flex justify-content-center mt-3">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        類別
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">家居物業</a>
        <a class="dropdown-item" href="#">交通出行</a>
        <a class="dropdown-item" href="#">休閒娛樂</a>
        <a class="dropdown-item" href="#">餐飲食品</a>
        <a class="dropdown-item" href="#">其他</a>
    </div>
</div>
{{! total amount }}
<div class="totalAmount d-flex justify-content-center align-items-center">
    <span>總金額：</span>
    <h1 style="display: inline;">{{totalAmount}}</h1>
</div>
{{! 支出項目 }}
<div class="row mt-2">
    <div class="col-2"></div>
    <ul class="list-group col-8">
        {{#each record}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <i class="{{this.icon}}"></i>
            <div class="col-auto mr-auto">
                <h4>{{this.name}}</h4>
                <small>{{this.date}}</small>
            </div>
            <div class="col-auto amount mr-4">{{this.amount}}</div>
            <a class="btn btn-dark" href="">修改</a>
            <form action="./records/{{this._id}}" style="display: inline;">
                <button class="btn btn-danger ml-1" type="submit">刪除</button>
            </form>
        </li>
        {{/each}}
    </ul>
</div>
<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-info" href="./records/new">新增支出</a>
</div>